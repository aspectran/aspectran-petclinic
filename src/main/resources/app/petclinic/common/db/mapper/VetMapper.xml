<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="app.petclinic.common.mybatis.mapper.VetMapper">

    <cache />

    <select id="getVetTotal" resultType="int">
        select count(1)
        from vets
    </select>

    <select id="getVetList" resultType="app.petclinic.vet.Vet">
        select id, first_name, last_name
        from vets
        limit #{page.size} offset #{page.offset}
    </select>

</mapper>
